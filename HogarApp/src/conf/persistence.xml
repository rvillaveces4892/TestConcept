    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1522:ORCL"/>
      <property name="javax.persistence.jdbc.user" value="c##hogarapp"/>
